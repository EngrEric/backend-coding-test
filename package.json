{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --all ---reporter=html --reporter=text --check-coverage --lines 80 --branches 80 --statements 80 mocha --timeout 40000 ./tests/*.test.js",
    "dev": "nodemon index.js",
    "test:load-dev": "artillery run -e dev tests/loadtest.yml",
    "test:load-prod": "artillery run -e prod tests/loadtest.yml",
    "start": "node index.js",
    "lint": "eslint --fix . --ignore-path .eslintignore"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "artillery": "^1.7.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.1",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "prettier": "^2.3.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "nyc": {
    "include": [
      "src"
    ]
  }
}
